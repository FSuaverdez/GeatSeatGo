<!-- MOVIES PILL -->
<div class="tab-content">
  <div id="movie" class="container tab-pane active"><br>
    <div class="container">
      <!-- TABLE -->
      <div class="container">
        <div class="table-wrapper">
          <div class="table-title">
            <div class="row">
              <div class="col-sm-6">
                <h2>Manage Movies<h2>
              </div>
              <div class="col-sm-6">
                <a href="#addMovieModal" class="btn btn-success" data-toggle="modal"><span>Add Movie</span></a>
                <!-- <a href="#deleteMovieModal" class="btn btn-danger" data-toggle="modal"><span>Delete Movie</span></a> -->
              </div>
            </div>
          </div>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <!-- <th></th> -->
                <th>Movie Title</th>
                <th>Description</th>
                <!-- <th>Image Link</th>
                <th>Trailer Link</th> -->
              </tr>
            </thead>
            <tbody>
              <% if (movies) { %>
              <% movies.forEach(movie => { %>
              <tr>
                <td><%=movie.title.slice(0,40)%></td>
                <td><%=movie.description.slice(0,40) +"..."%></td>
                <!-- <td><a href="<%=movie.imgUrl%>"><%=movie.imgUrl.slice(0,10) +"...." %></a></td>
                    <td>
                      <a href="<%= movie.trailerUrl%>">
                        <%- movie.trailerUrl.slice(0,3) +"...." %>
                      </a>
                    </td> -->
                <td>
                  <a href="#editMovieModal" data-id="<%- movie._id %>" data-title="<%- movie.title %>"
                    data-description="<%- movie.description %>" data-img-url="<%- movie.imgUrl %>"
                    data-trailer-url="<%- movie.trailerUrl %>" class="btn btn-warning"
                    data-toggle="modal"><span>Edit</span></a>
                  <a href="#deleteMovieModal" data-id="<%- movie._id %>" class="btn btn-danger"
                    data-toggle="modal"><span>Delete</span></a>
                </td>
              </tr>
              <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- ADD MOVIE MODAL -->
      <div id="addMovieModal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="add-form">
              <div class="modal-header">
                <h4 class="modal-title">Edit Movie</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input name="title" id="title" type="text" class="form-control" required>
                  <div class="title error"></div>
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" rows="7" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                  <label for="img-url">Image Link</label>
                  <input name="imgUrl" id="img-url" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                  <label for="trailer-url">Trailer Link</label>
                  <input type="text" name="trailerUrl" id="trailer-url" class="form-control" required>
                </div>
              </div>
              <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-info" value="Save">
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- EDIT MOVIE MODAL    -->
      <div id="editMovieModal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="edit-form">
              <div class="modal-header">
                <h4 class="modal-title">Edit Movie</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input name="title" id="title" type="text" class="form-control" required>
                  <div class="edit title error"></div>
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                  <label for="img-url">Image Link</label>
                  <input name="imgUrl" id="img-url" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                  <label for="trailer-url">Trailer Link</label>
                  <input type="text" name="trailerUrl" id="trailer-url" class="form-control" required>
                </div>
              </div>
              <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-info" value="Save">
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- Delete Modal HTML -->
      <div id="deleteMovieModal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <form id="delete-form">
              <div class="modal-header">
                <h4 class="modal-title">Delete Movie</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to delete these Movie?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
              </div>
              <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                <input type="submit" class="btn btn-danger" value="Delete">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
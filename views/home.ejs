<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GETSEATGO</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="home.css">
</head>

<body>

  <nav class="navbar navbar-expand-md navbar-light mb-2" style="background-color: #fbfcfd">
    <div class="container-fluid">
      <a href="/" class="navbar-brand mr-5"><img src="images/logos.png" width="" height=""
          class="d-inline-block align-top" alt="" loading="lazy">
      </a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">

        <% if (currentUser) { %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <h5 class="navbar-text ml-auto mr-5">
                <%- currentUser.email %>
            </li>
            <% if (currentUser.role==='ADMIN' ) { %>
              <li class="nav-item">
                <a class="btn btn-primary mr-6" href="/admin">Admin</a>
              </li>

              <% }%>
                <li class="nav-item">
                  <a href="/logout" class="btn btn-primary mr-6">Logout</a>
                </li>
          </ul>

          <% }else{ %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/signup">SIGN UP</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">LOGIN</a>
              </li>
            </ul>
            <% } %>

      </div>
    </div>
  </nav>

  <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000" data-pause="hover">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="images/avengers.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/jokes.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/toy.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/captmarvel.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/harley.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/lion.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/frozen2.jpg" class="d-block w-100 h-100">
      </div>
      <div class="carousel-item">
        <img src="images/yourname.jpg" class="d-block w-100 h-100">
      </div>
      <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      </a>
      <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
      </a>
    </div>
  </div>

  <br>

  <div class="container">
    <ul class="nav nav-pills nav-justified" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="pill" href="#showing">NOW SHOWING</a>
      </li>

    </ul>
    <br>
  </div>

  <div class="tab-content">
    <div id="showing" class="container tab-pane active"><br>
      <div class="container">
        <div class="row">

          <% if (scheduledMovies) { %>
            <% scheduledMovies.forEach(movie=> { %>
              <div class="col-md-3">
                <div class="card text-center">
                  <img class="card-img-top" src="<%=movie.imgUrl%>" alt="Card image">
                  <div class="card-body">
                    <h4 class="card-title">
                      <%=movie.title%>
                    </h4>
                    <a href="<%=movie.slug%>" class="btn btn-primary">See More</a>
                  </div>
                </div>
              </div>



              <% }) %>
                <% } %>


        </div>
      </div>
    </div>
    <br>



  </div>

  <div class="footer-container text-center">
    <a href="#" class="fa fa-facebook-square" style="font-size:36px; color:gray"></a>
    <a href="#" class="fa fa-instagram" style="font-size:36px; color:gray"></a>
    <a href="#" class="fa fa-twitter-square" style="font-size:36px; color:gray"></a>
    <br>

    <div class="footer-link">
      <a href="#">Terms of Use</a>
      <a href="#">Cookies Policy</a>
      <a href="#">FAQs</a>
      <a href="#">Customer Service</a>
      <a href="#">Privacy Policy</a>
    </div>
    <p>Getseatgo &copy; All Rights Reserved 2020</p>
  </div>

</body>

</html>